pipeline {
    agent any
    stages {

        stage('Example SSH Username with private key #1') {
            steps {
                sshPublisher(
                continueOnError: false, failOnError: true,
                publishers: [
                    sshPublisherDesc(
                        configName: "ansible-controller",
                        verbose: true,
                        transfers: [
                            sshTransfer(execCommand: "/bin/rm -rf /home/rra/jenkins_workspace"),
                            sshTransfer(sourceFiles: "playbook_sw_installation/**/*",)
                        ]
                    )
                ]
                )
            // end step
            }

        // end stage
        }


        stage('Example SSH Username with private key #2') {
            steps {
                sshPublisher(
                continueOnError: false, failOnError: true,
                publishers: [
                    sshPublisherDesc(
                        configName: "ansible-controller",
                        verbose: true,
                        transfers: [
                            sshTransfer(execCommand: "ls -rf /home/rra/playbook_sw_installation"),
                        ]
                    )
                ]
                )
            // end step
            }

        // end stage
        }


    }
}