pipeline {
    agent any
    stages {

        stage('Properties') {
            steps {
              script {
                properties(
                  [parameters(
                    [
                    /* Eleccion de branch con plugin gitparameter en caso de que estuviera instalado
                    https://plugins.jenkins.io/git-parameter/
                    gitParameter(branch: '',
                    branchFilter: '.*',
                    defaultValue: 'origin/master',
                    description: '',
                    name: 'branch',
                    quickFilterEnabled: false,
                    selectedValue: 'NONE',
                    sortMode: 'NONE',
                    tagFilter: '*',
                    type: 'GitParameterDefinition'),
                    */

                    //choice(choices: ['master', 'develop'],
                    choice(choices: ['main', 'develop'],
                    description: '', name: 'branch')
                    ])])
              }
            }
          }

        stage('Copy repo content to ansible controller #1') {
            steps {
                /*
                https://updates.jenkins-ci.org/download/plugins/publish-over-ssh/
                https://plugins.jenkins.io/publish-over-ssh/
                https://acozine.github.io/html/user_guide/windows_usage.html
                */
                sshPublisher(
                continueOnError: false, failOnError: true,
                publishers: [
                    sshPublisherDesc(
                        configName: "ansible",
                        verbose: true,
                        transfers: [
                            sshTransfer(sourceFiles: "playbook_sw_installation/**/*",)
                        ]
                    )
                ]
                )
            // end step
            }

        // end stage
        }


        stage('Execute ansible playbook #2') {
            steps {
                sshPublisher(
                continueOnError: false, failOnError: true,
                publishers: [
                    sshPublisherDesc(
                        configName: "ansible",
                        verbose: true,
                        transfers: [
                            //sshTransfer(execCommand: "cd /home/rra/playbook_sw_installation/"),
                            sshTransfer(execCommand: "echo '********************'"),
                            //sshTransfer(execCommand: "ansible-playbook software_installation.yml -i hosts.ini"),
                            sshTransfer(execCommand: "ansible-playbook /home/rra/playbook_sw_installation/software_installation.yml -i /home/rra/playbook_sw_installation/hosts.ini --vault-password-file /home/rra/playbook_sw_installation/vault-password"),
                            sshTransfer(execCommand: "echo '********************'"),
                            //sshTransfer(execCommand: "/bin/sh ~/playbook_sw_installation/software_installation.sh"),
                            //sshTransfer(execCommand: "/bin/sh /home/zaaz0523/devops/shell_test.sh"),
                        ]
                    )
                ]
                )
            // end step
            }

        // end stage
        }


    }
}
